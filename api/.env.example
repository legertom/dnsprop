# dnsprop API Configuration
# Copy this file to .env and customize for local development

# Server Configuration
PORT=8080
LOG_LEVEL=info

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# For local dev: http://localhost:5173
# For Railway: https://your-web.up.railway.app
CORS_ORIGINS=http://localhost:5173

# DNS Resolvers
# Comma-separated list of DNS resolver IP addresses
# Default includes major public resolvers: Cloudflare, Google, Quad9, OpenDNS
RESOLVERS=1.1.1.1,8.8.8.8,9.9.9.9,208.67.222.222,149.112.112.112,208.67.220.220

# Request Timeout
# Maximum duration for entire DNS query request (e.g., "2s", "3s", "5s")
REQUEST_TIMEOUT=2s

# Cache Configuration
# How long to cache DNS query results
CACHE_TTL=30s
# Maximum number of entries in the LRU cache
CACHE_MAX_ENTRIES=5000

# DNSSEC
# Enable DNSSEC validation by default (true/false)
ENABLE_DNSSEC=false

# Rate Limiting
# Requests per second allowed per IP address
RATE_LIMIT_RPS=1.0
# Burst capacity for token bucket
RATE_LIMIT_BURST=5
# Time to keep rate limiter for inactive clients
RATE_LIMIT_TTL=10m

# Metrics (optional - for Prometheus)
# Leave empty to disable metrics endpoint
# Example: METRICS_ADDR=:9090
METRICS_ADDR=
